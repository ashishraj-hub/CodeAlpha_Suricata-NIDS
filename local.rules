# Detect ICMP ping (for tesring)
alert icmp any any -> $HOME_NET any (msg:"ICMP Ping Detected";sid:1000001;rev:1;)

# Port Scan Detection(TCP SYN)
alert tcp any any -> $HOME_NET any (flags:S; msg:"Possible Port Scan Detected"; sid:1000002;rev:1;)

# Suspicious Web Attack
alert tcp any any -> $HOME_NET 80 (msg:"Suspicious HTTP Attempt"; content:"/etc/passwd"; sid:1000003; rev:1;)

# SSH Brute force attack
alert tcp any any -> $HOME_NET 22 (msg:"Possible SSH Brute Force"; flags:S; threshold:type both,track by_src, count 5, seconds 60;sid:1000004; rev:1;)

# Detect Nmap scan 
alert tcp any any -> $HOME_NET any (msg:"Possible Nmap Scan"; flags:S; threshold:type both, track by_src, count 20, seconds 10; sid:1000005;rev:1;)
